{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start content area -->
{{#post}}
	<div class="main-content-area single-post">
        <div class="ui container">
		<!--<article>-->
			<div class="post-head{{#unless feature_image}} no-image{{/unless}}" {{#if feature_image}}style="background-image:url({{feature_image}});"{{/if}}>
			</div>
			<div class="container">
				<div class="row">
                    <div class="ui centered grid">
                        <div class="four wide center aligned column">
                        </div>
                        <div class="twelve wide column left aligned">
                            <!--<div class="ui container">-->
                                <div class="ui basic segment" id="article-content" style="border-color: transparent">
                                    <div class="left ui rail">
                                        <div class="ui sticky">
                                            <div class="sidebar">
                                                <div class="ui basic segment" id="sidebar" style="padding-top: 100px; border-color: transparent">
                                                    <h4 class="ui header">TABLE OF CONTENTS</h4>
                                                    <script>
                                                        $(document).ready(function(){
                                                            var strong = $("#content strong");
                                                            function scroll_to_anchor(anchor_id){
                                                                var tag = $("#" + anchor_id + "");
                                                                $('html,body').animate({scrollTop: tag.offset().top},'slow');
                                                            }
                                                            var sidebar = $('#sidebar');
                                                            jQuery.each(strong, function(i, val) {
                                                                console.log(strong[i]);
                                                                var strongSidebar = $(strong[i]).clone();
                                                                $(strongSidebar).wrapInner("<a href='#" + i + "' class='anchor'></a>");
                                                                $(strongSidebar).appendTo(sidebar);
                                                                sidebar.append("<br>");
                                                                sidebar.append("<br>");
                                                                return (i<2);
                                                            });

                                                            $(strong).each(function(index, element){
                                                                $(this).wrapInner("<div id='" + index + "' class='anchor'></div>");
                                                            });

                                                            var sidebarAnchors = $('#sidebar, .anchor');
                                                            $(sidebarAnchors).each(function(index, element) {
                                                                $(sidebarAnchors[index]).click(function(event) {
                                                                    var id = $('#' + index + "");
                                                                    console.log(id);
                                                                    event.preventDefault();
                                                                    console.log(id.offset());
                                                                    $('html,body').animate({scrollTop: (id).offset().top},'slow');
                                                                })
                                                            });

                                                        });
                                                    </script>
                                                    {{> social-links}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                        <div class="post meta">
                                            <span class="article-type">INTERVIEW</span>&nbsp;&nbsp;
                                            {{#if tags}}
                                                <span class="category">
                                                    {{tags separator=", "}}
                                                </span>
                                            {{/if}}
                                            <h1>{{title}}</h1>
                                            <div class="post-meta">
                                            {{#author}}
                                                <a class="author" href="{{url}}" rel="author">
                                                    <span class="name">{{name}}</span>
                                                </a>
                                            {{/author}}
                                            <time class="time" datetime="{{date format="YYYY-MM-DD HH:MM:SS"}}" itemprop="datePublished">| {{date format="MMMM DD, YYYY"}}</time>
                                            </div>
                                        </div>
                                        <br><br/>
                                    <div class="content" id="content">
                                        {{content}}
                                    </div>
                                </div>
                                <br><br/>
                                <div class="ui grid">
                                        <div class="five wide column"><h3>AUTHOR</h3>{{> about-author}}</div>
                                        <div class="five wide column"><h3>READ MORE</h3>{{> prev-next}}</div>
                                        <div class="five wide column"><h3 style="visibility:hidden">READ MORE</h3>{{> prev-next}}</div>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
            <!--</div>-->
        <!--</article>-->

		<!--</article>-->
        </div>
</div>
{{/post}}
<!-- end content area -->