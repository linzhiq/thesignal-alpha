<!-- start header -->
<header class="site-header" id="main-navbar">
	<div class="container">
		<div class="row">
			<div class="ui top fixed menu" style="text-align: right">

					<!--  logo -->
					{{#if @blog.logo}}
					<a class="logo image-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}"></a>
					{{else}}
					<a class="logo text-logo" href="{{@blog.url}}">{{@blog.title}}</a>
					{{/if}}


					<nav class="ui compact right aligned text menu">
						<!--navigation -->
						{{navigation}}

						<span class="ui primary test item" data-target="#searchmodal">
							<i class="search icon"></i>
						</span>
						<!-- search -->
						{{> search-modal-sem}}
						<span class="item" data-toggle="modal" data-target="#searchmodal">
							<i class="search icon"></i>
						</span>
					</nav>
				</div>
			</div>
		</div>
	</div>
</header>
{{> search-modal}}
<!-- end header -->
